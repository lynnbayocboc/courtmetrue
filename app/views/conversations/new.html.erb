<div class="container-fluid m-t-20">
  <div class="row">
    <div class="col-sm-3 col-md-2">
    </div>
    <div class="col-sm-9 col-md-10">
      <div class="btn-group">
        <button type="button" class="btn btn-default">
          <div class="checkbox">
            <label>
              <input type="checkbox">
            </label>
          </div>
        </button>
      </div>
      <button type="button" class="btn btn-default" data-toggle="tooltip" title="Refresh">
        <span class="glyphicon glyphicon-refresh"></span>
      </button>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          More <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><a href="#">Mark all as read</a></li>
        </ul>
      </div>
      <!-- <div class="pull-right">
        <span class="text-muted"><b>1</b>â€“<b>50</b> of <b>160</b></span>
        <div class="btn-group btn-group-sm">
          <button type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </button>
          <button type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </button>
        </div>
      </div> -->
    </div>
  </div>
  <hr>
  <div class="row">
    <%= render "layouts/message_sidebar" %>
    <div class="col-sm-9 col-md-10">
      <div class="panel panel-default">
        <div class="panel-heading resume-heading">
          <div class="row">
            <div class="col-sm-12">
              <div class="col-xs-4 col-sm-2">
                <figure>
                  <img class="img-responsive" style="height: 100px; margin-left: 0;" alt="" src="http://placehold.it/300x300">
                </figure>
              </div>
              <div class="col-xs-8 col-sm-10">
                <%= @profile.name %> (<%= @profile.age %>)<br>
                <%= @profile.address %><br><br>
                <%= link_to("View Profile", user_path(@profile.user), class: "btn btn-default") %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-body" style="min-height: 250px;">
          <ul class="chat">
          </ul>
        </div>
        <div class="panel-footer">
          <%= form_tag user_conversations_path(@user) do %>
            <div class="input-group">
              <%= text_field_tag :body, nil, class: "form-control input-sm", placeholder: "Enter your message here.." %>
              <span class="input-group-btn">
                <button class="btn btn-warning btn-sm" id="btn-chat">
                  Send
                </button>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>